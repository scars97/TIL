package com.example.demo.repository;

import static org.assertj.core.api.Assertions.assertThat;

import java.util.List;

import org.junit.jupiter.api.Test;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.context.SpringBootTest;
import org.springframework.test.annotation.Rollback;
import org.springframework.transaction.annotation.Transactional;

import com.example.demo.entity.Member;
import com.example.demo.entity.Product;

@SpringBootTest
public class FindMemberProductTest {

	@Autowired
	MemberRepository memberRepository;
	@Autowired
	ProductRepository productRepository;
	
	@Test
	@Transactional
	@Rollback(false)
	void find() {
		//given
		setProduct();
		Member member = setMember();	
		
		//when
		Member findMember = memberRepository.findOne(member.getId());
		List<Product> products = findMember.getProducts(); // 객체 그래프 탐색
		
		//then
		for (Product findProduct : products) {
			System.out.println("product.name = " + findProduct.getName());
		}
	}
	
	private Member setMember() {
		Member member = new Member();
		Product product = setProduct();
		member.setUserName("practice");
		member.getProducts().add(product); // 중간테이블 데이터 넣기. 준영속 상태.
		memberRepository.save(member); // 영속 상태 만듦.
		return member;
	}
	
	private void setProduct() {
		Product product = new Product();
		product.setName("item");
		productRepository.save(product);
	}
}
